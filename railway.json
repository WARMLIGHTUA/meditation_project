{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "./docker-entrypoint.sh",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "variables": {
        "APP_STATIC_URL": "/static",
        "DJANGO_DEBUG": "False",
        "ENVIRONMENT_NAME": "production"
    }
} 